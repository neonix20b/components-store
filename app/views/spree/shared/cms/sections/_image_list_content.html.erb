<% if section.link_one.present? && section.link_type_one == 'Spree::Taxon' %>
  <% link_one = spree.nested_taxons_path(section.link_one) %>
<% elsif section.link_one.present? && section.link_type_one == 'Spree::Product' %>
  <% link_one = spree.product_path(section.link_one) %>
<% else %>
  <% link_one = nil %>
<% end %>

<div class="d-none d-md-block mt-4 mb-5 pb-5 vendors-list-item">
    <% if section.title.present? %>
        <h1 class="text-uppercase text-center mb-4"><%=section.title%></h1>
    <%end%>
    <div class="row">
        <% if section.image_one&.attachment&.attached? %>
            <div class="col-12 col-md-3 px-4 vendors-list-item-image">
                <img class="d-md-none lazyload"
                    data-src="<%= main_app.cdn_image_url(section.img_one_md) %>"
                    data-srcset="<%= main_app.cdn_image_url(section.img_one_md) %>"
                    alt="<%= section&.title %>">
            </div>
        <%end%>
        <div class="col-12 col-md-6">
            <% if section.description.present? %>
                <div class="vendors-list-item-about">
                <%= section.description %>
                </div>
            <%end%>
        </div>
        <div class="col-12 col-md-3 d-flex flex-column align-items-end justify-content-center">
            <div class="vendors-list-item-btn w-75">
                <%= link_to "Shop Now", link_one, class: "btn btn-primary w-100" %>
            </div>
        </div>
    </div>
</div>